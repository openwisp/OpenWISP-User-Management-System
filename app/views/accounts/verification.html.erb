<%= render :partial => 'verification_periodic_check.html.erb' %>

<div class="grid_12">
  <div id="verification">
    <%= render :partial => 'verification' %>
  </div>
</div>
<div class="clear"></div>

<% if(@account.verify_with_gestpay?) %>
    <div class="overlay">
      <a class="close" data-confirm-message="<%= t :Confirm_Close_Payment_Overlay %>" data-callback-url="<%= url_for(:action => 'verification', :id => @single_access_token) %>"><%= t :Close %></a>
      <div class="nolayout" id="bank-gateway">
        <%= render :partial => 'credit_card_form' %>
      </div>
    </div>
    
    <div id="mask"></div>
    <div id="loading-overlay"></div>
    <div id="loading-message"></div>
    <script type="text/javascript">
        i18n = {
            verification_message_first_step: "<%= I18n.t :verification_message_first_step %>",
            verification_message_second_step: "<%= I18n.t :verification_message_second_step %>"
        }
    </script>
<% end %>