<div class="grid_12">
  <h2><%= t :Radius_group %> <%= @radius_group.name %></h2>
  <div id="radius_group_info" class="box">
    <h2><%= t :Radius_group_info %></h2>
    <table>
      <tbody>
      <tr>
        <td><strong><%= t :Name %></strong></td>
        <td><%= @radius_group.name %></td>
      </tr>
      <tr>
        <td><strong><%= t :Priority %></strong></td>
        <td><%= @radius_group.priority %></td>
      </tr>
      <tr>
        <td><strong><%= t :Notes %></strong></td>
        <td><%= @radius_group.notes %></td>
      </tr>
      </tbody>
      <tfoot>
      <% if auth? :radius_groups_manager %>
          <tr>
            <td colspan="2">
              <p><%= link_to t(:Edit), edit_radius_group_url(@radius_group), :class => 'button nomargin' %></p>
            </td>
          </tr>
      <% end %>
      </tfoot>
    </table>
  </div>
</div>

<div class="grid_12">
  <% if auth? :radius_checks_viewer %>
      <div id="radius_group_checks" class="box">
        <h2><%= t :Radius_checks %></h2>
        <%= render :partial => 'radius_checks/list', :locals => { :subject => @radius_group } %>
      </div>
  <% end %>
  <% if auth? :radius_replies_viewer %>
      <div id="radius_group_replies" class="box">
        <h2><%= t :Radius_replies %></h2>
        <%= render :partial => 'radius_replies/list', :locals => { :subject => @radius_group } %>
      </div>
  <% end %>
</div>
<div class="clear"></div>