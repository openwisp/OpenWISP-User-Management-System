<% content_for :header do %>
    <h1><%=t :Login %></h1>
<% end %>

<% content_for :back do %>
    <%= mobile_link_back_to root_path %>
<% end %>


<%= simple_form_for @account_session, :url => account_session_path do |f| %>
    <% if @account_session.errors.any? %>
        <div data-role="collapsible">
          <h3><%=t :header, :count => @account_session.errors.count, :scope => [ :errors, :template ] %></h3>
          <p><%= f.error_messages %></p>
        </div>
    <% end %>

    <ul data-role="listview" data-inset="true">
      <li data-role="fieldcontain">
        <% if Configuration.get('use_mobile_phone_as_username') == "true"  %>
            <%= f.input :username, :label => t(:Username_or_mobile_or_email) %>
        <% else %>
            <%= f.input :username %>
        <% end %>
      </li>

      <li data-role="fieldcontain">
        <%= f.input :password %>
      </li>

      <li data-role="fieldcontain">
        <%= f.input_field :remember_me, :as => :boolean %>
        <%= f.label :remember_me %>
      </li>

      <li>
        <%= f.button :submit %>
      </li>

      <% if CONFIG['omniauth_providers'].include?(:facebook) %>
        <li class="facebook"><a href="<%= root_path %>auth/facebook" class="social-button facebook"><%= t(:Sign_in_with) %> Facebook</a></li>
      <% end %>
      <% if CONFIG['omniauth_providers'].include?(:google_oauth2) %>
        <li class="google"><a href="<%= root_path %>auth/google_oauth2" class="social-button google"><%= t(:Sign_in_with) %> Google+</a></li>
      <% end %>
      <% if CONFIG['spid_login_enabled'] == true %>
        <% if URI.parse(root_path) && %w( http https ).include?(URI.parse(root_path).scheme) %>
           <p class="center social-login"><%= root_path.inspect%><a href="<%= root_path %>/auth/spid">
        <%else %>
           <p class="center social-login"><a href="<%= root_url %>auth/spid">
        <% end %>
        <%= image_tag("spid-button-link-link.png", :width => "200") %>
        </a></p>
      <% end %>
    </ul>
<% end %>
